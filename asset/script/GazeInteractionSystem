using UnityEngine;

public class GazeInteractionSystem : MonoBehaviour
{
    public float gazeTime = 2f;
    private float currentGaze;
    private bool isGazing;
    private bool activated;

    public GameObject progressIndicator;

    void Start()
    {
        ResetGaze();
    }

    void Update()
    {
        if (!isGazing || activated) return;

        currentGaze += Time.deltaTime;
        UpdateIndicator();

        if (currentGaze >= gazeTime)
        {
            Activate();
        }
    }

    public void OnGazeEnter()
    {
        isGazing = true;
        currentGaze = 0f;
    }

    public void OnGazeExit()
    {
        ResetGaze();
    }

    void Activate()
    {
        activated = true;
        Debug.Log("Gaze Interaction Activated");
        ResetGaze();
    }

    void UpdateIndicator()
    {
        if (progressIndicator != null)
        {
            float scale = currentGaze / gazeTime;
            progressIndicator.transform.localScale = new Vector3(scale, scale, scale);
        }
    }

    void ResetGaze()
    {
        isGazing = false;
        activated = false;
        currentGaze = 0f;
        if (progressIndicator != null)
            progressIndicator.transform.localScale = Vector3.zero;
    }
}
