using UnityEngine;

public class AudioManager : MonoBehaviour
{
    public AudioSource background;
    public AudioSource rideSound;

    public void PlayRideAudio()
    {
        background.Stop();
        rideSound.Play();
    }

    public void StopRideAudio()
    {
        rideSound.Stop();
        background.Play();
    }

    public void ToggleMute()
    {
        background.mute = !background.mute;
        rideSound.mute = background.mute;
    }
}
