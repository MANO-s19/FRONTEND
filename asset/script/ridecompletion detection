using UnityEngine;

public class RideCompletionManager : MonoBehaviour
{
    public Transform endPoint;
    public Transform cart;

    void Update()
    {
        if (!GameStateManager.Instance.isRideStarted) return;

        if (Vector3.Distance(cart.position, endPoint.position) < 0.5f)
        {
            GameStateManager.Instance.CompleteRide();
        }
    }
}
