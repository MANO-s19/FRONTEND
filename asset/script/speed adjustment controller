using UnityEngine;

public class SpeedAdjustmentController : MonoBehaviour
{
    public RideMovementController ride;
    public float minSpeed = 2f;
    public float maxSpeed = 10f;

    public void IncreaseSpeed()
    {
        ride.speed = Mathf.Clamp(ride.speed + 1f, minSpeed, maxSpeed);
    }

    public void DecreaseSpeed()
    {
        ride.speed = Mathf.Clamp(ride.speed - 1f, minSpeed, maxSpeed);
    }
}
